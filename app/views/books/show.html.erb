<div class="container">
 <div class="row">
  <%= render 'list', book: @nbook, users: @user %>
  <div class="col-md-8 offset-md-1">
   <table class="table book-index">
    <h2>Book detail</h2>
    <thead>
     <tr>
      <th></th>
      <th>Tittle</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
      <tr>
       <td><%= image_tag @user.get_profile_image(50,50) %>
        <nav><%= link_to @user.name,user_path(@user) %></nav>
       </td>
       <td><%= link_to @book.title, book_path %></td>
       <td><%= @book.body %></td>
       <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
        <td><%= link_to "Destroy",book_path(@book), method: :delete, class:"btn btn-sm btn-danger", data: {confirm: "本当に消しますか？"} %></td>
       <% end %>
      </tr>
    </tbody>
　 </table>
　</div>
 </div>
</div>

