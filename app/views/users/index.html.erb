
<div class="container">
  <div class="row">
   <%= render 'books/list', book: @book, users: @user, nbook: @nbook %>
   <div class="col-md-8 offset-md-1">
    <h3>Users</h3>
    <table class="table user-index">
     <thead>
      <tr>
       <th>Image</th>
       <th>name</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <tbody>
      <% @users.each do |user| %>
       <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
       </tr>
      <% end %>
     </tbody>
    </table>
   </div>
  </div>
 </div>
