
<!DOCTYPE html>
 <thml>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <h2>User info</h2>
    <table class="table">
     <%= image_tag @user.get_profile_image(50,50) %>
     <tbody>
       <tr>
       <th>name</th>
       <th><%= @user.name %></th>
      </tr>
      <tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
      </tr>
     </tbody>
    </table>
    <div class="row">
     <a class="btn btn-outline-secondary btn-block edit_user_43396" href="/users/43396/edit">
      <i class="fas fa-user-cog"></i>
     </a>
    </div>
    <h3 class="mt-3">New book</h3>
     <%= form_with model: @book do |f| %>
      <div class="form-group">
       <h4>Title</h4>
       <%= f.text_field :title, class: "col-xs-12 book_title" %>
      </div>
      <div class="form-group">
       <h4>Opinion</h4>
       <%= f.text_area :body, class: "col-xs-12 book_body" %>
      </div>
      <%= f.submit 'Create Book', class: "btn btn-success col-xs-12" %>
      <% end %>
   </div>
  </div>
 </div>
</thml>